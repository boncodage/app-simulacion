<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.imdb.SimulacionCarnet.TopLevelActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:src="@mipmap/queue"
        android:layout_gravity="bottom"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btnSetupProcesses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnSetupProcesses"
            android:textAllCaps="false"
            android:layout_marginRight="20dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Large"
            />
        <Button
            android:id="@+id/btnStartQueue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnStartQueue"
            android:textAllCaps="false"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Large"
            />
    </LinearLayout>

</LinearLayout>
