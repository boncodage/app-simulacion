<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.imdb.SimulacionCarnet.SetupProcessesActivity">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="1"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <EditText
                android:id="@+id/editTextProcessDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/editTextHintCreateProcess"
                android:textColorHint="@color/successProcessState"/>
            <EditText
                android:id="@+id/editTextProcessNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/editTextHintProcessNumber"
                android:inputType="number"
                android:textColorHint="@color/darkPurpleBlueColor"
                android:layout_row="1"
                android:layout_column="0"/>

<!--            <Button
                android:id="@+id/btnCreateProcess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnCreateProcess"
                android:layout_column="1"
                android:layout_gravity="right"

                />-->

        </GridLayout>

        <ListView
            android:id="@+id/listViewProcesses"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin"></ListView>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnCreateProcess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Design.FloatingActionButton"
        app:fabSize="normal"
        android:src="@mipmap/ic_add_white_36dp"
        app:backgroundTint="@color/orangeColor"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.974"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
</android.support.constraint.ConstraintLayout>
